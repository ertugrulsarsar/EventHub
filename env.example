# =============================================================================
# ETKİNLİK YÖNETİMİ - ENVIRONMENT VARIABLES
# =============================================================================
# Bu dosya proje için gerekli environment variable'ları tanımlar
# Kopyalayıp .env olarak yeniden adlandırın ve değerleri güncelleyin

# =============================================================================
# DJANGO TEMEL AYARLARI
# =============================================================================

# Django güvenlik anahtarı (PRODUCTION'DA MUTLAKA DEĞİŞTİRİN!)
SECRET_KEY=django-insecure-etkinlik-yonetimi-2024-gelistirme-ortami

# Hata ayıklama modu (Production'da False olmalı)
DEBUG=True

# Hangi domain'lerden erişime izin verileceği
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# VERİTABANI AYARLARI
# =============================================================================

# Veritabanı türü (sqlite3, postgresql, mysql)
DATABASE_ENGINE=sqlite3

# Veritabanı adı (SQLite için dosya yolu)
DATABASE_NAME=db.sqlite3

# Veritabanı kullanıcı adı (PostgreSQL/MySQL için)
DATABASE_USER=

# Veritabanı şifresi (PostgreSQL/MySQL için)
DATABASE_PASSWORD=

# Veritabanı sunucu adresi (PostgreSQL/MySQL için)
DATABASE_HOST=

# Veritabanı port numarası (PostgreSQL/MySQL için)
DATABASE_PORT=

# =============================================================================
# CORS VE GÜVENLİK AYARLARI
# =============================================================================

# CORS izin verilen origin'ler
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# CSRF güvenilir origin'ler
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# SSL yönlendirme (Production'da True olmalı)
SECURE_SSL_REDIRECT=False

# Güvenli cookie ayarları (Production'da True olmalı)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# E-POSTA AYARLARI
# =============================================================================

# E-posta backend (console, smtp, sendgrid)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP sunucu adresi
EMAIL_HOST=smtp.gmail.com

# SMTP port numarası
EMAIL_PORT=587

# TLS kullanımı
EMAIL_USE_TLS=True

# E-posta kullanıcı adı
EMAIL_HOST_USER=

# E-posta şifresi (Gmail için App Password kullanın)
EMAIL_HOST_PASSWORD=

# =============================================================================
# LOGGING AYARLARI
# =============================================================================

# Log seviyesi (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# PRODUCTION AYARLARI (Geliştirme ortamında False)
# =============================================================================

# Production ortamında bu değerleri True yapın
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# DEBUG=False
